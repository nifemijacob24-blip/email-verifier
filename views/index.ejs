    <script>
    const form = document.querySelector('form');
    const domainInput = document.querySelector('input[name="domain"]');

    form.addEventListener('submit', (e) => {       
        const button = document.getElementById('button')

        const value = domainInput.value.trim();
        


        // Rule 1: Must contain a dot
        if (!value.includes('.')) {
            e.preventDefault(); // STOP the form
            alert("A domain name must have an extension (like .com or .io)");
            return;
        }

        // Rule 2: No spaces allowed
        if (value.includes(' ')) {
            e.preventDefault(); // STOP the form
            alert("Domain names cannot have spaces.");
            return;
        }

        // Rule 3: No http:// or https://
        if (value.startsWith('http://') || value.startsWith('https://')) {
            e.preventDefault(); // STOP the form
            alert("Please remove 'http://' or 'https://'. Just type the name (e.g. google.com)");
            return;
        }

        button.disabled=true;
        const messages = [
            "Connecting to SMTP server...",
            "Verifying email patterns...",
            "Filtering invalid addresses...",
            "Almost there, checking final matches..."
        ];
        let i = 0;
        
        if (button.tagName === 'INPUT') {
            button.value = messages[0];

            setInterval(() => {
            if (i < messages.length) {
                button.value = messages[i];
                i++;
            }
        }, 10000); // Change text every 10 seconds
    
        } else {
            button.innerText = 'Processing...';
        }

        // 2. RE-ENABLE LATER (After 2 minutes)
        setTimeout(() => {
            button.disabled = false;
            
            // Reset text
            if (button.tagName === 'INPUT') {
                button.value = 'Search';
            } else {
                button.innerText = 'Search';
            }
            
        }, 120000);

        
        
    });
</script>


